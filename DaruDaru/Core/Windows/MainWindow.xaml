<metro:MetroWindow x:Class="DaruDaru.Core.Windows.MainWindow"
                   x:ClassModifier="internal"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:s="clr-namespace:System;assembly=mscorlib"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   xmlns:cv="clr-namespace:DaruDaru.Core.Converters"
                   xmlns:c="clr-namespace:DaruDaru.Utilities"
                   Title="DaruDaru"
                   Width="450"
                   Height="300"
                   BorderBrush="{DynamicResource AccentColorBrush}"
                   BorderThickness="1"
                   AllowDrop="True"
                   WindowStartupLocation="CenterScreen"
                   DragOver="ctlSearchGrid_DragOver"
                   DragLeave="ctlSearchGrid_DragLeave"
                   DragEnter="ctlSearchGrid_DragEnter"
                   Drop="ctlSearchGrid_Drop"
                   Loaded="MetroWindow_Loaded">
    <metro:MetroWindow.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="DefaultFont">Malgun Gothic</FontFamily>
            <s:Double x:Key="ContextMenuFontSize">12</s:Double>
            <s:Double x:Key="UpperCaseContentFontSize">12</s:Double>

            <Style TargetType="{x:Type GridViewColumnHeader}"
                   BasedOn="{StaticResource MetroGridViewColumnHeader}">
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />

                <Setter Property="Height"
                        Value="24" />
            </Style>

            <Style TargetType="TextBox"
                   BasedOn="{StaticResource MetroTextBox}">
                <Setter Property="TextWrapping" Value="NoWrap" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </metro:MetroWindow.Resources>

    <TabControl x:Name="ctlTab"
                TabStripPlacement="Left">
        <TabControl.Resources>
            <Style TargetType="TabItem"
                   BasedOn="{StaticResource MetroTabItem}">
                <Setter Property="Padding" Value="0 0 2 0" />
            </Style>
        </TabControl.Resources>
        
        <TabItem>
            <TabItem.HeaderTemplate>
                <DataTemplate>
                    <Viewbox Width="38"
                             Height="38"
                             ToolTip="다운로드"
                             IsHitTestVisible="False">
                        <Canvas Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="26" Height="41" Canvas.Left="25" Canvas.Top="16" Stretch="Fill" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" Data="F1 M 25,52L 51,52L 51,57L 25,57L 25,52 Z M 35,16L 41,16L 41,36.5L 49,27L 49,36.5L 38,49L 27,36.5L 27,27L 35,36.5L 35,16 Z "/>
                        </Canvas>
                    </Viewbox>
                </DataTemplate>
            </TabItem.HeaderTemplate>

            <Grid x:Name="ctlSearchGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBox x:Name="ctlSearchUrl"
                         Grid.Row="0"
                         Grid.Column="0"
                         VerticalContentAlignment="Center"
                         metro:TextBoxHelper.Watermark="만화 주소 입력 혹은 링크 드래그"
                         metro:TextBoxHelper.ClearTextButton="True"
                         metro:TextBoxHelper.SelectAllOnFocus="True"
                         AllowDrop="False"
                         KeyDown="ctlSearchUrl_KeyDown" />

                <Button x:Name="ctlSearchDownload"
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="다운로드"
                        Margin="5 0 0 0"
                        Click="ctlSearchDownload_Click" />

                <ListView x:Name="ctlSearch"
                          Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Margin="0 5 0 0"
                          BorderBrush="{DynamicResource AccentColorBrush}"
                          BorderThickness="1"
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListView.Resources>
                        <ResourceDictionary>
                            <Style TargetType="{x:Type ListViewItem}"
                                   BasedOn="{StaticResource MetroListViewItem}">
                                <EventSetter Event="MouseDoubleClick"
                                             Handler="ctlSearchItem_MouseDoubleClick" />
                            </Style>

                            <cv:ProgressColorConverter x:Key="ProgressColorConverter"
                                                       BrushNormal    ="#FFB6D2DE"
                                                       BrushCompete   ="#FFB3CEB3"
                                                       BrushDownloaded="#FFB3D5D5"
                                                       BrushNoNew     ="#FFD4DAB3"
                                                       BrushError     ="#FFE1B7B3"
                                                       BrushProtected ="#FFE4CADC" />
                        </ResourceDictionary>
                    </ListView.Resources>

                    <ListView.ContextMenu>
                        <ContextMenu Opened="ctlSearchMenu_Opened">
                            <MenuItem Header="꿀뷰로 열기"
                                      x:Name="ctlSearchOpenFile"
                                      Click="ctlSearchOpenFile_Click" />
                            <MenuItem Header="폴더 열기"
                                      x:Name="ctlSearchOpenDir"
                                      Click="ctlSearchOpenDir_Click" />
                            <MenuItem Header="홈페이지 열기"
                                      x:Name="ctlSearchOpenWeb"
                                      Click="ctlSearchOpenWeb_Click" />
                            <Separator />
                            <MenuItem Header="다시 시도"
                                      x:Name="ctlSearchRetry"
                                      Click="ctlSearchRetry_Click" />
                            <Separator />
                            <MenuItem Header="선택 항목 목록에서 제거"
                                      x:Name="ctlSearchRemoveItem"
                                      Click="ctlSearchRemoveItem_Click" />
                            <MenuItem Header="완료된 항목 제거"
                                      Click="ctlSearchRemoveCompleted_Click" />
                            <MenuItem Header="모두 제거"
                                      Click="ctlSearchRemoveAll_Click" />
                        </ContextMenu>
                    </ListView.ContextMenu>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="제목"
                                            Width="190"
                                            DisplayMemberBinding="{Binding DisplayName, Mode=OneWay}"/>
                            <GridViewColumn Header="상태"
                                            Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <metro:MetroProgressBar HorizontalAlignment="Stretch"
                                                                    VerticalContentAlignment="Stretch"
                                                                    Background="{DynamicResource GrayBrush8}"
                                                                    Foreground="{Binding State,
                                                                                         Mode=OneWay,
                                                                                         Converter={StaticResource ProgressColorConverter}}"
                                                                    Minimum="0"
                                                                    Value="{Binding ProgressValue, Mode=OneWay}"
                                                                    Maximum="{Binding ProgressMaximum, Mode=OneWay}" />

                                            <TextBlock HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="NoWrap"
                                                       LineStackingStrategy="BlockLineHeight"
                                                       Text="{Binding StateText, Mode=OneWay}"
                                                       Tag="{Binding}" />
                                        </Grid>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="속도 / 용량"
                                            Width="90">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SpeedOrFileSize, Mode=OneWay}"
                                                   TextAlignment="Right"
                                                   HorizontalAlignment="Stretch" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </TabItem>

        <TabItem>
            <TabItem.HeaderTemplate>
                <DataTemplate>
                    <Viewbox Width="38"
                             Height="38"
                             ToolTip="마루마루"
                             IsHitTestVisible="False">
                        <Canvas Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="38" Height="30" Canvas.Left="19" Canvas.Top="23" Stretch="Fill" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" Data="F1 M 19,23L 27,23L 27,31L 19,31L 19,23 Z M 19,34L 27,34L 27,42L 19,42L 19,34 Z M 31,23L 57,23L 57,31L 31,31L 31,23 Z M 19,45L 27,45L 27,53L 19,53L 19,45 Z M 31,34L 57,34L 57,42L 31,42L 31,34 Z M 31,45L 57,45L 57,53L 31,53L 31,45 Z "/>
                        </Canvas>
                    </Viewbox>
                </DataTemplate>
            </TabItem.HeaderTemplate>

            <ListView x:Name="ctlMaru"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      c:GridViewSort.AutoSort="True">
                <ListView.Resources>
                    <ResourceDictionary>
                        <Style TargetType="{x:Type ListViewItem}"
                               BasedOn="{StaticResource MetroListViewItem}">
                            <EventSetter Event="MouseDoubleClick"
                                         Handler="ctlMaruItem_MouseDoubleClick" />
                        </Style>
                    </ResourceDictionary>
                </ListView.Resources>

                <ListView.ContextMenu>
                    <ContextMenu Opened="ctlMaruContextMenu_Opened">
                        <MenuItem Header="다시 검색 (새로운 것만)"
                                  x:Name="ctlMaruSearchNew"
                                  Click="ctlMaruSearchNew_Click" />
                        <MenuItem Header="다시 검색"
                                  x:Name="ctlMaruSearch"
                                  Click="ctlMaruSearch_Click" />
                        <Separator />
                        <MenuItem Header="홈페이지 열기"
                                  x:Name="ctlMaruOpenWeb"
                                  Click="ctlMaruOpenWeb_Click" />
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="제목"
                                        Width="220"
                                        c:GridViewSort.PropertyName="Title"
                                        DisplayMemberBinding="{Binding Title, Mode=OneWay}" />

                        <GridViewColumn Header="마지막 검색"
                                        Width="130"
                                        c:GridViewSort.PropertyName="LastUpdated">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding LastUpdated, Mode=OneWay, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem>
            <TabItem.HeaderTemplate>
                <DataTemplate>
                    <Viewbox Width="38"
                             Height="38"
                             ToolTip="저장된 만화"
                             IsHitTestVisible="False">
                        <Canvas Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="36" Height="36" Canvas.Left="20" Canvas.Top="20" Stretch="Fill" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" Data="F1 M 20,20L 50.25,20L 56,25.75L 56,56L 20,56L 20,20 Z M 52,27.25L 48.75,24L 48,24L 48,37L 28,37L 28,24L 24,24L 24,52L 52,52L 52,27.25 Z M 39,24L 39,34L 44,34L 44,24L 39,24 Z "/>
                        </Canvas>
                    </Viewbox>
                </DataTemplate>
            </TabItem.HeaderTemplate>

            <ListView x:Name="ctlArchive"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      BorderThickness="1"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      c:GridViewSort.AutoSort="True">
                <ListView.Resources>
                    <ResourceDictionary>
                        <Style TargetType="{x:Type ListViewItem}"
                               BasedOn="{StaticResource MetroListViewItem}">
                            <EventSetter Event="MouseDoubleClick"
                                         Handler="ctlArchive_MouseDoubleClick" />
                        </Style>
                    </ResourceDictionary>
                </ListView.Resources>

                <ListView.ContextMenu>
                    <ContextMenu Opened="ctlArchiveContextMenu_Opened">
                        <MenuItem Header="꿀뷰로 열기"
                                  x:Name="ctlArchiveOpen"
                                  Click="ctlArchiveOpen_Click" />
                        <MenuItem Header="폴더 열기"
                                  x:Name="ctlArchiveOpenDir"
                                  Click="ctlArchiveOpenDir_Click" />
                        <Separator />
                        <MenuItem Header="홈페이지 열기"
                                  x:Name="ctlArchiveOpenWeb"
                                  Click="ctlArchiveOpenWeb_Click" />
                    </ContextMenu>
                </ListView.ContextMenu>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="제목"
                                        Width="220"
                                        c:GridViewSort.PropertyName="TitleWithNo"
                                        DisplayMemberBinding="{Binding TitleWithNo, Mode=OneWay}" />

                        <GridViewColumn Header="저장된 날자"
                                        Width="130"
                                        c:GridViewSort.PropertyName="Archived">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Archived, Mode=OneWay, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>

        <TabItem>
            <TabItem.HeaderTemplate>
                <DataTemplate>
                    <Viewbox Width="38"
                             Height="38"
                             ToolTip="설정"
                             IsHitTestVisible="False">
                        <Canvas Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="38.9239" Height="38.9239" Canvas.Left="18.538" Canvas.Top="18.5381" Stretch="Fill" Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type ContentPresenter}}, Path=(TextElement.Foreground)}" Data="F1 M 38,23.5C 38.8643,23.5 39.7109,23.5756 40.5337,23.7206L 42.6275,18.5381L 48.1901,20.787L 46.0964,25.9692C 47.6473,27.0149 48.9851,28.3527 50.0308,29.9036L 55.213,27.8099L 57.4619,33.3725L 52.2794,35.4664C 52.4244,36.2891 52.5,37.1357 52.5,38C 52.5,38.8643 52.4244,39.7109 52.2794,40.5337L 57.4619,42.6275L 55.213,48.1901L 50.0308,46.0964C 49.0795,47.5073 47.8865,48.7418 46.5112,49.7405L 48.7844,54.8462L 43.3041,57.2891L 41.0307,52.1828C 40.0533,52.3906 39.0394,52.5 38,52.5C 37.1357,52.5 36.2891,52.4244 35.4664,52.2794L 33.3725,57.462L 27.8099,55.213L 29.9036,50.0309C 28.3527,48.9851 27.0149,47.6473 25.9691,46.0964L 20.787,48.1901L 18.538,42.6275L 23.7206,40.5336C 23.5756,39.7109 23.5,38.8643 23.5,38C 23.5,37.1357 23.5756,36.2891 23.7206,35.4664L 18.538,33.3725L 20.787,27.8099L 25.9691,29.9036C 26.9205,28.4927 28.1135,27.2582 29.4889,26.2594L 27.2157,21.1537L 32.6959,18.7109L 34.9694,23.8172C 35.9468,23.6094 36.9606,23.5 38,23.5 Z M 38,28C 32.4771,28 28,32.4772 28,38C 28,43.5229 32.4771,48 38,48C 43.5228,48 48,43.5229 48,38C 48,32.4772 43.5228,28 38,28 Z "/>
                        </Canvas>
                    </Viewbox>
                </DataTemplate>
            </TabItem.HeaderTemplate>

            <ScrollViewer VerticalScrollBarVisibility="Visible"
                          Padding="0 5 0 5">
                <StackPanel>
                    <StackPanel.Resources>
                        <ResourceDictionary>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource MetroButton}">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="MinWidth" Value="50" />
                            </Style>
                            <Style TargetType="GroupBox"
                                   BasedOn="{StaticResource MetroGroupBox}">
                                <Setter Property="Margin" Value="0 0 5 5" />
                            </Style>
                            <Style TargetType="{x:Type metro:ToggleSwitch}">
                                <Setter Property="OffLabel" Value="" />
                                <Setter Property="OnLabel" Value="" />
                            </Style>
                        </ResourceDictionary>
                    </StackPanel.Resources>
                    
                    <GroupBox Header="다운로드 폴더">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="ctlConfigDownloadPath"
                                     Text="{Binding Path=SavePath}"
                                     VerticalContentAlignment="Center"
                                     Margin="0 0 5 0"
                                     IsReadOnly="True" />

                            <Button Grid.Column="1"
                                    Content="선택"
                                    Margin="0 0 5 0"
                                    Click="ctlConfigDownloadPathSelect_Click" />

                            <Button Grid.Column="2"
                                    Content="열기"
                                    Margin="0 0 5 0"
                                    Click="ctlConfigDownloadPathOpen_Click" />

                            <Button Grid.Column="3"
                                    Content="기본값"
                                    Click="ctlConfigDownloadPathDefault_Click" />
                        </Grid>
                    </GroupBox>
                    
                    <GroupBox Header="검색한 주소 링크 생성">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <metro:ToggleSwitch Grid.ColumnSpan="2"
                                                x:Name="ctlConfigLinkCreate"
                                                ContentDirection="RightToLeft"
                                                IsChecked="{Binding Path=CreateUrlLink, Mode=TwoWay}"
                                                Padding="0"
                                                Margin="0 0 0 5" />

                            <TextBox Grid.Row="1"
                                     x:Name="ctlConfigLinkPath"                                     
                                     Text="{Binding Path=UrlLinkPath}"
                                     IsEnabled="{Binding Path=CreateUrlLink, Mode=OneWay}"
                                     VerticalContentAlignment="Center"
                                     Margin="0 0 5 0"
                                     IsReadOnly="True" />

                            <Button Grid.Row="1"
                                    Grid.Column="1"
                                    Content="선택"
                                    Margin="0 0 5 0"
                                    IsEnabled="{Binding Path=CreateUrlLink, Mode=OneWay}"
                                    Click="ctlConfigLinkPathSelect_Click" />

                            <Button Grid.Row="1"
                                    Grid.Column="2"
                                    Content="열기"
                                    Margin="0 0 5 0"
                                    IsEnabled="{Binding Path=CreateUrlLink, Mode=OneWay}"
                                    Click="ctlConfigLinkPathOpen_Click" />

                            <Button Grid.Row="1"
                                    Grid.Column="3"
                                    Content="기본값"
                                    IsEnabled="{Binding Path=CreateUrlLink, Mode=OneWay}"
                                    Click="ctlConfigLinkPathDefault_Click" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="보호된 파일 다운로드">
                        <metro:ToggleSwitch x:Name="ctlConfigDownloadProtected"
                                            ContentDirection="RightToLeft"
                                            Click="ctlConfigDownloadProtected_Click"/>
                    </GroupBox>

                    <GroupBox Header="기록 삭제">
                        <StackPanel>
                            <Button Content="다운로드 기록 삭제"
                                    Margin="0 5 0 0"
                                    Click="ctlConfigClearDownload_Click" />
                        </StackPanel>
                    </GroupBox>

                    <TextBlock Text="CopyRight (C) By RyuaNerin"
                               HorizontalAlignment="Stretch"
                               TextAlignment="Center" />
                </StackPanel>
                
            </ScrollViewer>
        </TabItem>
    </TabControl>
</metro:MetroWindow>
