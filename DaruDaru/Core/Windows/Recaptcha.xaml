<metro:MetroWindow x:Class="DaruDaru.Core.Windows.Recaptcha"
                   x:ClassModifier="internal"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   WindowStartupLocation="CenterOwner"
                   ResizeMode="NoResize"
                   ShowInTaskbar="False"
                   Width="400"
                   Height="550"
                   WindowTransitionsEnabled="False">
    <Grid>
        <WebBrowser x:Name="ctlBrowser"
                            Visibility="Collapsed"
                            MaxHeight="450"
                            OverridesDefaultStyle="False"
                            Navigating="ctlBrowser_Navigating"
                            Navigated="ctlBrowser_Navigated"
                            LoadCompleted="ctlBrowser_LoadCompleted" />

        <metro:ProgressRing x:Name="ctlProgress"
                            IsActive="True" />
    </Grid>
</metro:MetroWindow>
